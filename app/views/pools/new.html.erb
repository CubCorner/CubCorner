<h2>New Pool</h2>

<p style="font-weight: bold;">Before creating a pool, read the <%= link_to "pool guidelines", wiki_page_path(id: "help:pools") %>.</p>

<%= custom_form_for(@pool) do |f| %>
  <%= f.input(:name, as: :string, required: true) %>
  <%= f.input(:description, as: :dtext, limit: PawsMovin.config.pool_descr_max_size) %>
  <%= f.input(:post_ids_string, as: :text, label: "Posts") %>
  <%= f.input(:category, collection: %w[series collection], include_blank: true, selected: "", required: true) %>
  <%= f.input(:is_active) %>
  <%= f.button(:submit, "Submit") %>
<% end %>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  New Pool
<% end %>
