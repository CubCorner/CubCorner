<%= render "search" %>
<table class="striped">
  <thead>
    <tr>
      <th width="50%">Primary Name</th>
      <th width="50%">Secondary Names</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |artist| %>
      <% if artist.visible? %>
        <%= tag.tr(id: "artist-#{artist.id}") do %>
          <td>
            <%= link_to h(artist.name), artist_path(artist) %>
          </td>
          <td><%= artist.other_names_string %></td>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= numbered_paginator(@artists) %>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  Artists
<% end %>
