<% @forum = @ticket.model %>
<h4>You are reporting the following forum post:</h4>
<div class="author"><%= link_to_user(@forum.creator) %></div>
<span class="date">Created <%= time_ago_in_words_tagged(@forum.created_at) %></span>
<br><br>
<div class="dtext-container">
  <%= format_text(@forum.body) %>
</div>

<%= render "tickets/partials/create_notice", message: @forum %>
