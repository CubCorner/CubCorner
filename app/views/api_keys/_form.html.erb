<%= simple_form_for(api_key) do |f| %>
  <%= f.input(:name, as: :string, hint: "A name to help you remember what this key is for.") %>
  <%= f.input(:permitted_ip_addresses, label: "IP Addresses", as: :string, hint: "An optional list of IPs allowed to use this key. Space separated, subnets allowed. Leave blank to allow all IPs.") %>
  <%= f.input(:permissions, as: :select, collection: Permissions.for_select, hint: "An optional list of API endpoints this key is allowed to use. Ctrl+click to select multiple endpoints. Leave blank to allow all API endpoints.<br>Note that a permission being listed does not mean your user can perform that action.".html_safe, input_html: { multiple: true }) %>
  <%= f.submit("Submit") %>
<% end %>
